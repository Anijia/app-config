.container
  h1= pageTitle
  form(method="POST", action="/app")
    .form-field
      label(for="app-title") 名称
      input(type="text", name="app[title]")
    .form-field
      label(for="app-id") ID
      input(type="text", name="app[id]")
    .form-field
      label(for="app-url") 地址
      input(type="text", name="app[url]")
    .form-field
      label(for="app-platform") 平台
      select(name="app[platform]")
        option(value="ios") IOS
        option(value="android") Android
    .form-field
      label(for="app-device") 设备
      select(name="app[device]")
        option(value="phone") Phone
        option(value="pad") Pad
    .form-field
      label(for="app-icon") 图标
      input(type="text", name="app[icon]")
    .form-field
      label(for="app-iconHd") 高清图标
      input(type="text", name="app[iconHd]")
    .form-field
      label(for="app-customUrl") 自定义地址
      input(type="text", name="app[customUrl]")
    input(type="submit")
